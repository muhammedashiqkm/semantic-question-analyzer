# .env.example

# Flask App & Security
FLASK_APP=run.py
FLASK_ENV=production
JWT_SECRET_KEY="your-strong-jwt-secret-key-here"

# Admin Credentials
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your-strong-admin-password"

# API Keys
GOOGLE_API_KEY="your-google-api-key"
OPENAI_API_KEY="your-openai-api-key"
DEEPSEEK_API_KEY="your-deepseek-api-key"

# --- Specific Model Names for Each Provider ---
# The API will use these models when a provider is selected in a request.
GEMINI_EMBEDDING_MODEL="text-embedding-004"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

GEMINI_REASONING_MODEL="gemini-2.5-flash"
OPENAI_REASONING_MODEL="gpt-4o"
DEEPSEEK_REASONING_MODEL="deepseek-chat"

# App Settings
SIMILARITY_THRESHOLD=0.85
CORS_ORIGINS="*"

# App Name
COMPOSE_PROJECT_NAME=semantic-question-analyzer